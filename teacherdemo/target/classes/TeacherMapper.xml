<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TeacherMapper">

    <select id="selectById" parameterType="int" resultType="top.godxu.pojo.Teacher">
        select * from teachers where id = #{id}
    </select>

    <select id="selectAll" resultType="top.godxu.pojo.Teacher">
        select * from teachers
    </select>

    <insert id="insertTeacher" parameterType="top.godxu.pojo.Teacher">
        INSERT INTO teachers (name) VALUES (#{name})
    </insert>

    <update id="updateTeacherName" parameterType="top.godxu.pojo.Teacher">
        UPDATE teachers
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteTeacher" parameterType="int">
        DELETE FROM teachers WHERE id = #{id}
    </delete>

    <select id="selectByIds" parameterType="int[]" resultType="top.godxu.pojo.Teacher">
        select * from teachers where id IN
        <foreach collection="array" item="id" open="(" separator=" ," close=")">
            #{id}
        </foreach>
    </select>

    <delete id="deleteTeachersByIds" parameterType="int[]">
        DELETE FROM teachers WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            <if test="id != 0">
                #{id}
            </if>
        </foreach>
    </delete>

</mapper>
