<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="classMapper">

    <select id="selectById" parameterType="int" resultType="top.godxu.pojo.Class">
        select * from classes where id = #{id}
    </select>

    <select id="selectAll" resultType="top.godxu.pojo.Class">
        select * from classes
    </select>

    <insert id="insertClass" parameterType="top.godxu.pojo.Class">
        INSERT INTO classes (name) VALUES (#{name})
    </insert>

    <update id="updateClassName" parameterType="top.godxu.pojo.Class">
        UPDATE classes
        SET name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteClass" parameterType="int">
        DELETE FROM classes WHERE id = #{id}
    </delete>

    <select id="selectByIds" parameterType="int[]" resultType="top.godxu.pojo.Class">
        select * from classes where id IN
        <foreach collection="array" item="id" open="(" separator=" ," close=")">
            #{id}
        </foreach>
    </select>

    <delete id="deleteClassesByIds" parameterType="int[]">
        DELETE FROM classes WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            <if test="id != 0">
                #{id}
            </if>
        </foreach>
    </delete>

</mapper>
